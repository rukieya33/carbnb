<div class="container my-5">
  <h1 class="mb-4 text-center">Discover the best cars for your journey</h1>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @cars.each do |car| %>
      <div class="col">
        <div class="card h-100 shadow-sm">

          <!-- Car image -->
          <%= image_tag "https://via.placeholder.com/400x200?text=Car+Image", class: "card-img-top", alt: "#{car.brand} #{car.model}" %>

          <!-- Card body -->
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= "#{car.brand} #{car.model}" %></h5>
            <p class="card-text text-muted mb-1"><%= car.description.presence || "No description provided." %></p>
            <p class="fw-bold">£<%= car.rent_price %>/day</p>

            <!-- Action buttons -->
            <div class="mt-auto d-flex justify-content-between">

              <!-- Book Car button -->
              <%= link_to car_path(car), class: "btn btn-primary btn-sm" do %>
                <i class="bi bi-calendar-check me-1"></i> Book Car
              <% end %>

              <!-- Favorite form -->
              <%= form_with url: favorite_car_path(car), method: :post, local: true do %>
                <%= submit_tag "❤️ Favorite", class: "btn btn-outline-danger btn-sm" %>
              <% end %>

            </div>
          </div>

          <!-- Footer -->
          <div class="card-footer text-muted text-center small">
            Listed on <%= car.created_at.strftime("%B %d, %Y") %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
