<div class="container my-5">
  <h1 class="text-center mb-4"><strong>Discover the best cars for your journey</strong></h1>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @cars.each do |car| %>
      <div class="col d-flex">
        <div class="card shadow-sm w-100 d-flex flex-column">

          <!-- Car Image -->
          <% if car.photo_url.present? %>
            <%= image_tag car.photo_url, class: "card-img-top object-fit-cover", alt: "#{car.brand} #{car.model}", style: "height: 200px;" %>
            <% elsif car.photo.attached? %>
            <%= cl_image_tag car.photo.key, class: "card-img-top object-fit-cover", alt: "#{car.brand} #{car.model}", style: "height: 200px;" %>
          <% end %>

          <!-- Card Body -->
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= car.brand %> <%= car.model %></h5>
            <%# <p class="text-muted small"><%= car.description.presence || "No description provided." %>
            <p class="text-muted small mb-3"><%= truncate(car.description, length: 180) %></p>

            <p class="fw-bold">£<%= car.rent_price %>/day</p>

            <!-- Action Buttons -->
            <div class="mt-auto d-flex justify-content-between align-items-center">
              <%= link_to car_path(car), class: "btn btn-primary btn-sm" do %>
                <i class="bi bi-calendar-check me-1"></i> View Car
              <% end %>

              <%= form_with url: favorite_car_path(car), method: :post, local: true do %>
                <%= submit_tag "❤️ Favorite", class: "btn btn-outline-danger btn-sm" %>
              <% end %>
            </div>
          </div>

          <!-- Footer -->
          <div class="card-footer text-muted text-center small">
            Listed on <%= car.created_at.strftime("%B %d, %Y") %><br>
            Owner: <%= car.user.first_name %> <%= car.user.last_name %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
