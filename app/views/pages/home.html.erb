<div class="vh-100 d-flex flex-column justify-content-center align-items-center bg-dark text-white">
  <div class="text-center mb-4">
    <h1 class="display-4 fw-bold">Discover the best cars for your journey</h1>
    <p class="lead">Search by car to find your perfect ride</p>
  </div>

   <div class="w-100" style="max-width: 500px;">
    <%= form_with url: cars_path, method: :get, html: { class: "input-group input-group-lg" }, local: true do |f| %>
      <%= text_field_tag :query, params.dig(:search, :query), class: "form-control", placeholder: "I am looking for a car.." %>
      <button class="btn btn-primary" type="submit">Search</button>
    <% end %>
  </div>
</div>
</div>
